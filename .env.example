# Application Settings
APP_NAME=Banking Customer Service AI
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Database Configuration
DATABASE_URL=postgresql://bankingai:bankingai123@localhost:5432/banking_ai
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# LLM Configuration (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=2048

# Vector Database (ChromaDB)
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=banking_conversations

# Security & Authentication
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption
ENCRYPTION_KEY=your-encryption-key-change-this-in-production

# Banking Configuration
BANK_NAME=OpenBank AI
BANK_CODE=OBANK
ACCOUNT_NUMBER_PREFIX=ACC
CARD_NUMBER_PREFIX=4532

# KYC Settings
KYC_REQUIRED_DOCUMENTS=id_proof,address_proof,photo
KYC_AUTO_APPROVAL_THRESHOLD=0.85
MAX_DOCUMENT_SIZE_MB=5

# Fraud Detection
FRAUD_DETECTION_ENABLED=true
FRAUD_SCORE_THRESHOLD=0.7
MAX_DAILY_TRANSACTION_AMOUNT=50000
MAX_TRANSACTION_COUNT_PER_DAY=20

# Compliance
AML_SCREENING_ENABLED=true
TRANSACTION_MONITORING_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/banking_ai.log

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# OCR Settings
TESSERACT_PATH=/usr/bin/tesseract
OCR_LANGUAGE=eng
